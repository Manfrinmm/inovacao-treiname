[
  {
    "name": "default",
    "type": "postgres",
    "entities": ["./src/app/models/*.ts"],
    "migrations": ["./src/database/migrations/*.ts"],
    "cli": {
      "migrationsDir": "./src/database/migrations"
    }
  },
  {
    "name": "mongo",
    "type": "mongodb",
    "useUnifiedTopology": true,
    "entities": ["./src/app/models/schemas/*.ts"]
  }
]
